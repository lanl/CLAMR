# This sets the internal test name to the directory name that
# contains this file
set TEST_NAME=`basename $PWD`

set TEST_NAME="${TEST_NAME}${PRECISION_TYPE}"

# First test is to see if the gpucheck run is getting the same result
# as the gold standard
./clamr_openmponly -n 128 -i 100 -t 3000 >& ${TEST_NAME}_run1.out
./compare_stdout.pl 0.0 ${TEST_NAME}_run1.gold ${TEST_NAME}_run1.out

./clamr_openmponly -n 128 -l 4 -i 100 -t 3000 >& ${TEST_NAME}_run2.out
./compare_stdout.pl 0.0 ${TEST_NAME}_run2.gold ${TEST_NAME}_run2.out

./clamr_openmponly -n 256 -i 100 -t 3000 >& ${TEST_NAME}_run3.out
./compare_stdout.pl 0.0 ${TEST_NAME}_run3.gold ${TEST_NAME}_run3.out

./clamr_openmponly -A "face-in-place" -f -n 128 -i 1 -t 4835 -l 2 >& ${TEST_NAME}_run4.out
./compare_stdout.pl 0.0 ${SCRIPT_DIR}/${TEST_NAME}_run4.gold ${TEST_NAME}_run4.out

setenv OMP_NUM_THREADS 4
./clamr_openmponly -n 128 -i 100 -t 3000 >& ${TEST_NAME}_run5.out
./compare_stdout.pl 0.0 ${TEST_NAME}_run1.gold ${TEST_NAME}_run5.out


